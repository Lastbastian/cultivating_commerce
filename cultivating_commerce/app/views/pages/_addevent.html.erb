<div class="modal fade" id="myAddEvent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Add Event</h4>
      </div>
      <div class="modal-body">
        <%= form_for(:event, :url => session_path(:user)) do |f| %>
          <div class="field">
            <%= f.label :date %><br />
            <%= f.date_field :date, autofocus: true, :placeholder => "you need adate" %>
          </div>
          <div class="field">
            <%= f.label :time %><br />
            <%= f.text_field :time, autofocus: true, :placeholder => "e.g. 9am - 1pm"%>
          </div>
          <div class="field">
            <%= f.label :title %><br />
            <%= f.text_field :title, autofocus: true, :placeholder => "give it a title"%>
          </div>
          <div class="field">
            <%= f.label :description %><br />
            <%= f.text_area :description, autofocus: true, :placeholder => "tell us about the event"%>
          </div>
          <div class="field">
            <%= f.label :address %><br />
            <%= f.text_field :address_line_1, autofocus: true, :placeholder => "some street address" %>
          </div>
          <div class="field">
            <%= f.label :city %><br />
            <%= f.text_field :city, autofocus: true, :placeholder => "some city" %>
          </div>
          <div class="field">
            <%= f.label :zipcode %><br />
            <%= f.text_field :zipcode, autofocus: true, :placeholder => "some zip code" %>
          </div>
          <div class="actions">
            <%= f.submit "Submit" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>