<!-- LEFT SIDE -->
<section class="user col-md-5 bg-c1">
	<div class="user-info text-center">
		 <%= image_tag @user.user_img, alt: "user-img", class: "user-img bg-c3 " %>
		<h2> <%= @user.first_name %></h2>
		<p> <%= @user.about %> </p>
	</div>
	<div>
		<a class="button" href="mailto:<%= @user.email %> ">Contact</a>
	</div>
	<div>
		<h2>Exchanges you're attending</h2>
		<ul class="exchanges">
		<% if @user.events && !@user.events.empty? %>
				<% @user.events.each do |e| %>
				<%= render 'attending', e: e %>
			<% end %>
		<% end %>
		</ul>
	</div>
	<div>
		<h2>Exchanges you're hosting</h2>
		<ul class="exchanges">
			<% if @user.hosted_events && !@user.hosted_events.empty? %>
				<% @user.hosted_events.each do |e| %>
					<%= render 'hosting', e: e %>
				<% end %>
			<% end %>
		</ul>
		<% if user_signed_in? && current_user.id == @user.id %>
			<div>
				<button type="button" class="button" data-toggle="modal" data-target="#myAddEvent">Host a new exchange!</button>
				<!-- Add Exchange Modal -->
				<%= render "pages/addevent" %>
			</div>
		<%end %>
	</div>
</section>
<!-- RIGHT SIDE -->
<section class="listings col-md-7">
	<% if user_signed_in? && current_user.id == @user.id %>
		<div>
			<%= render "listings/form" %>
		</div>
	<% end %>
	<ul class="listings">
		<% if @user.listings && !@user.listings.empty? %>
			<% @user.listings.order(:created_at).each do |l| %>
				<%= render 'listing', l: l %>
			<% end %>
		<% end %>
	</ul>
</section>
