<!-- LEFT SIDE -->
<section class="user col-md-3 bg-c1 text-center">
	<div class="bg-w ">
	<div class="user-info">
		 <%= image_tag @user.user_img, alt: "user-img", class: "user-img bg-c3 " %>
		<h2> <%= @user.first_name %></h2>
		<p> <%= @user.about %> </p>
	</div>
	<div class="text-center">
		<a href="mailto:<%= @user.email %> "><i class="fa fa-envelope-o fa-3x"></i></a><br><br>
		<% if user_signed_in? && current_user.id == @user.id %>
			<p class="small">
				<a value= true><a = "private_contact"> (make my email private)</a>
			</p>
			<br>
		<% end %>
	</div>
</div>

	<!-- EVENTS I WILL ATTEND -->
	<div>
		<h3 class="bold">Events I will attend</h3>

		<ul class="exchanges bg-w p-tb text-left">
		<% if @user.events && !@user.events.empty? %>
				<% @user.events.each do |e| %>
				<%= render 'attending', e: e %>
			<% end %>
		<% end %>
		</ul>
	</div>

	<!-- EVENT HOSTING -->
	<div>
		<h3 class="bold">Events I am hosting</h3>
		<% if user_signed_in? && current_user.id == @user.id %>
			<div class="button">
				<%= link_to("Host a new event!", new_event_path) %>
			</div>
		<%end %>
		<ul class="exchanges bg-w p-tb text-left">
			<% if @user.hosted_events && !@user.hosted_events.empty? %>
				<% @user.hosted_events.each do |e| %>
					<%= render 'hosting', e: e %>
				<% end %>
			<% end %>
		</ul><br><br>
	</div>
</section>

<!-- RIGHT SIDE -->
<section class="listings col-md-9">
	<% if user_signed_in? && current_user.id == @user.id %>
		<div>
			<%= render "listings/form" %>
		</div>
	<% end %>
	<ul class="listings">
		<% if @user.listings && !@user.listings.empty? %>
			<% @user.listings.order(:created_at).each do |l| %>
				<%= render 'listing', l: l %>
			<% end %>
		<% end %>
	</ul>
</section>
